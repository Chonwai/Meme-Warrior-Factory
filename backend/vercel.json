{
  "version": 2,
  "builds": [
    {
      "src": "index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "requirementsPath": "requirements-vercel.txt"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.py"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "true",
    "PYTHONPATH": "/var/task"
  },
  "build": {
    "env": {
      "PIP_FLAGS": "--no-dependencies"
    }
  }
} 